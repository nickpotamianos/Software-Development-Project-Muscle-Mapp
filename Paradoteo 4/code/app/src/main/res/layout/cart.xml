<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#0D0D0D"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="#0D0D0D"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="#1C1C1C">

                <ImageView
                    android:id="@+id/image_back"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:padding="0dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/back"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:padding="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cart"
                android:textSize="25sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            android:background="#121212"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_item1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#1D1D1D"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_item1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="0dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_item1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/workouthallproduct" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linear_item1_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_item1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_item1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Day Pass"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:id="@+id/linear_item1_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_item1_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            app:cardBackgroundColor="#242424"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="4dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/image_item1_close"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="8dp"
                                android:src="@drawable/xclose"
                                android:scaleType="centerInside" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_item1_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_item1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:padding="8dp"
                        android:text="10€"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#E53535">

                        <ImageView
                            android:id="@+id/image_icon1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/crossfit"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#E53535">

                        <ImageView
                            android:id="@+id/image_icon2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/kriki"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#E53535">

                        <ImageView
                            android:id="@+id/image_icon3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/runningtrack"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_icon4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#E53535">

                        <ImageView
                            android:id="@+id/image_icon4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/wheelchai"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            android:background="#121212"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="#1D1D1D"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_item2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/drink_c" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linear_item2_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linear_item2_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_item2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="1 Month"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:id="@+id/linear_item2_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_item2_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            app:cardBackgroundColor="#242424"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="4dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/image_item2_close"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="8dp"
                                android:src="@drawable/xclose"
                                android:scaleType="centerInside" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_item2_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_item2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="110dp"
                        android:padding="8dp"
                        android:text="2.5€"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_item2_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#1D1D1D">

                        <ImageView
                            android:id="@+id/image_item2_minus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/minus"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/text_item2_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:text="01"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_item2_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#1D1D1D">

                        <ImageView
                            android:id="@+id/image_item2_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="8dp"
                            android:src="@drawable/plus"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="12dp"
            android:background="#121212"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_item3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                app:cardBackgroundColor="#1D1D1D"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_item3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    app:cardBackgroundColor="#E53535"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="4dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_item3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="8dp"
                        android:src="@drawable/towels"
                        android:scaleType="centerInside" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linear_item3_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linear_item3_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_item3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="3 Month"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF" />
                    <LinearLayout
                        android:id="@+id/linear_item3_close"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:gravity="right|center_vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_item3_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            app:cardBackgroundColor="#242424"
                            app:cardCornerRadius="40dp"
                            app:cardElevation="4dp"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/image_item3_close"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="8dp"
                                android:src="@drawable/xclose"
                                android:scaleType="centerInside" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_item3_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_item3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="110dp"
                        android:padding="8dp"
                        android:text="2.5€"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />

                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_item3_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#1D1D1D">

                        <ImageView
                            android:id="@+id/image_item3_minus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="8dp"
                            android:layout_gravity="center"
                            android:src="@drawable/minus"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/text_item3_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:text="01"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/card_item3_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:padding="8dp"
                        android:orientation="vertical"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#1D1D1D">

                        <ImageView
                            android:id="@+id/image_item3_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="8dp"
                            android:src="@drawable/plus"
                            android:scaleType="centerInside" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_checkout"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#E53535"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/text_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:text="Proceed to checkout"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linear_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linear_footer_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_home"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/homered" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_footer_calendar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_calendar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/calendar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_footer_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/location_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_footer_car"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_car"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bytesize_car" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
